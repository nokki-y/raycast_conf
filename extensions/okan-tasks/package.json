{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-okan",
  "title": "Okan Tasks",
  "description": "おかんスプレッドシートの未完了タスクを確認",
  "icon": "icon.png",
  "author": "nokki-y",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "check-okan-tasks",
      "title": "Check Okan Tasks",
      "subtitle": "未完了タスク確認",
      "description": "おかんスプレッドシートの未完了タスクを表示",
      "mode": "view"
    },
    {
      "name": "notify-okan-tasks",
      "title": "Okan Tasks - Background Notifications",
      "subtitle": "バックグラウンド通知設定",
      "description": "自動通知の設定（このコマンドは直接実行不要です。Background RefreshをONにして通知を有効化してください）",
      "mode": "no-view",
      "interval": "1m"
    },
    {
      "name": "test-notification-sound",
      "title": "Test Notification Sound",
      "subtitle": "通知音テスト",
      "description": "現在設定されている通知音をテスト再生します",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "spreadsheetId",
      "type": "textfield",
      "required": true,
      "title": "スプレッドシートID",
      "description": "おかんスプレッドシートのID",
      "default": "your_spreadsheet_id_here"
    },
    {
      "name": "sheetName",
      "type": "textfield",
      "required": true,
      "title": "シート名",
      "description": "タスクが記載されているシートの名前",
      "default": "your_sheet_name_here"
    },
    {
      "name": "sheetGid",
      "type": "textfield",
      "required": true,
      "title": "シートGID",
      "description": "シートのGID(URLのgid=の後の数字)",
      "default": "0"
    },
    {
      "name": "myName",
      "type": "textfield",
      "required": true,
      "title": "あなたの名前",
      "description": "スプレッドシートの列ヘッダーと完全一致させること",
      "default": "your_name_here"
    },
    {
      "name": "notificationInterval",
      "type": "dropdown",
      "required": false,
      "title": "通知間隔",
      "description": "通知を送る間隔（デフォルト: 1時間）",
      "default": "60",
      "data": [
        {
          "title": "1分（非推奨/テスト用）",
          "value": "1"
        },
        {
          "title": "30分",
          "value": "30"
        },
        {
          "title": "1時間（推奨）",
          "value": "60"
        },
        {
          "title": "2時間",
          "value": "120"
        },
        {
          "title": "4時間",
          "value": "240"
        }
      ]
    },
    {
      "name": "notificationSound",
      "type": "dropdown",
      "required": false,
      "title": "通知音",
      "description": "通知時に鳴らす音（デフォルト: Basso）",
      "default": "Basso",
      "data": [
        {
          "title": "Basso（低音・デフォルト）",
          "value": "Basso"
        },
        {
          "title": "Blow（吹く音）",
          "value": "Blow"
        },
        {
          "title": "Bottle（ボトル）",
          "value": "Bottle"
        },
        {
          "title": "Frog（カエル）",
          "value": "Frog"
        },
        {
          "title": "Funk（ファンク）",
          "value": "Funk"
        },
        {
          "title": "Glass（ガラス）",
          "value": "Glass"
        },
        {
          "title": "Hero（ヒーロー）",
          "value": "Hero"
        },
        {
          "title": "Morse（モールス信号）",
          "value": "Morse"
        },
        {
          "title": "Ping（ピン）",
          "value": "Ping"
        },
        {
          "title": "Pop（ポップ）",
          "value": "Pop"
        },
        {
          "title": "Purr（ゴロゴロ音）",
          "value": "Purr"
        },
        {
          "title": "Sosumi（ソスミ）",
          "value": "Sosumi"
        },
        {
          "title": "Submarine（潜水艦）",
          "value": "Submarine"
        },
        {
          "title": "Tink（チーン）",
          "value": "Tink"
        }
      ]
    },
    {
      "name": "notificationStyle",
      "type": "dropdown",
      "required": false,
      "title": "通知スタイル",
      "description": "通知の表示方法（デフォルト: アラート）",
      "default": "alert",
      "data": [
        {
          "title": "アラート（OKを押すまで閉じない）",
          "value": "alert"
        },
        {
          "title": "通知バナー（自動的に消える）",
          "value": "banner"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.5",
    "@raycast/utils": "^2.2.1",
    "dotenv": "^17.2.3",
    "googleapis": "^164.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "^24.9.2",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "fix-lint": "ray lint --fix",
    "setup-auth": "ts-node src/setup-auth.ts",
    "sync-auth": "bash scripts/sync-auth.sh",
    "release": "bash scripts/build-release.sh"
  }
}
